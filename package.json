{
	"name": "sign-api",
	"version": "1.0.0",
	"description": "An API to fetch astrology data from ChatGPT",
	"main": "src/index.ts",
	"license": "Apache-2.0",
	"author": "André Bortoli <[email protected]>, João Guesser <[email protected]>",
	"scripts": {
		"start:dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/index.ts",
		"start:prod": "NODE_ENV=production node dist/index.js",
		"build": "babel src --out-dir dist --extensions \".ts,.js\" --ignore \"**/*.test.ts\"",
		"lint": "eslint src tests",
		"format:eslint": "eslint --fix src tests",
		"format:prettier": "prettier --write src tests",
		"format": "${npm_execpath} run format:prettier; ${npm_execpath} run format:eslint",
		"test": "jest --coverage",
		"heroku-postbuild": "yarn --ignore-optional && yarn build && rm -Rf node_modules && yarn install --frozen-lockfile --production && yarn start:prod"
	},
	"devDependencies": {
		"@babel/cli": "^7.21.0",
		"@babel/core": "^7.21.4",
		"@babel/eslint-parser": "^7.21.3",
		"@babel/eslint-plugin": "^7.19.1",
		"@babel/preset-env": "^7.21.4",
		"@babel/preset-typescript": "^7.21.4",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.0",
		"@types/node": "^18.15.11",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"babel-plugin-tsconfig-paths-module-resolver": "^1.0.4",
		"eslint": "^8.38.0",
		"eslint-config-xo": "^0.43.1",
		"eslint-config-xo-typescript": "^0.57.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-security": "^1.7.1",
		"eslint-plugin-unicorn": "^46.0.0",
		"jest": "^29.5.0",
		"prettier": "^2.8.7",
		"ts-jest": "^29.1.0",
		"ts-node-dev": "^2.0.0",
		"typescript": ">=4.4"
	},
	"dependencies": {
		"axios": "^1.3.5",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"winston": "^3.8.2",
		"zod": "^3.21.4"
	}
}
